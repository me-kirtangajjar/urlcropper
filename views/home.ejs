<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Cropper - Home</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
    <style>
      .gradient-bg {
        background: linear-gradient(90deg, #4f46e5, #7c3aed);
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-100 flex flex-col">
    <header class="gradient-bg text-white p-6 shadow-lg">
      <h1 class="text-3xl font-bold text-center">URL Cropper</h1>
    </header>

    <main class="container mx-auto px-4 py-8 flex-grow">
      <form action="/shortUrls" method="POST" class="mb-8">
        <div class="flex flex-col sm:flex-row gap-4">
          <input
            required
            placeholder="Enter your URL"
            type="url"
            name="originalUrl"
            id="fullUrl"
            class="flex-grow p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <button
            type="submit"
            class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition duration-300 ease-in-out"
          >
            Crop
          </button>
        </div>
      </form>

      <% if (shortUrls.length > 0) { %>
      <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full table-auto">
          <thead class="bg-gray-200">
            <tr>
              <th class="px-4 py-2 text-left">Full URL</th>
              <th class="px-4 py-2 text-left">Short URL</th>
              <th class="px-4 py-2 text-left">Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach((shortUrl, index) => { %>
            <tr class="hover:bg-gray-100">
              <td class="border px-4 py-2">
                <a
                  href="<%= shortUrl.originalUrl %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 hover:text-blue-800 truncate block max-w-xs"
                >
                  <%= shortUrl.originalUrl %>
                </a>
              </td>
              <td class="border px-4 py-2">
                <button
                  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded copy-btn"
                  data-clipboard-text="<%= `${baseUrl}/${shortUrl.shortId}` %>"
                >
                  Copy
                </button>
              </td>
              <td class="border px-4 py-2"><%= shortUrl.clicks %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div
        class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 rounded"
        role="alert"
      >
        <p>No shortened URLs available.</p>
      </div>
      <% } %>
    </main>

    <footer class="bg-gray-800 text-white py-4 mt-8">
      <div class="container mx-auto text-center">
        <p>
          &copy; 2024 URL Cropper. Created by
          <a
            href="https://www.linkedin.com/in/me-kirtangajjar"
            target="_blank"
            class="text-indigo-400 hover:text-indigo-300"
            >Kirtan Gajjar</a
          >. All rights reserved.
        </p>
      </div>
    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", (event) => {
        var clipboard = new ClipboardJS(".copy-btn");

        clipboard.on("success", function (e) {
          var button = e.trigger;
          var originalText = button.textContent;
          button.textContent = "Copied!";
          button.classList.remove("bg-blue-500", "hover:bg-blue-700");
          button.classList.add("bg-green-500", "hover:bg-green-700");

          setTimeout(function () {
            button.textContent = originalText;
            button.classList.remove("bg-green-500", "hover:bg-green-700");
            button.classList.add("bg-blue-500", "hover:bg-blue-700");
          }, 2000);
        });

        clipboard.on("error", function (e) {
          console.error("Action:", e.action);
          console.error("Trigger:", e.trigger);
          alert("Failed to copy. Please try again.");
        });
      });
    </script>
  </body>
</html>
